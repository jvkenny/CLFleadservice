# ArcGIS Online Configuration
# Copy this file to .env.local and fill in your values

# Feature Service URL (required)
# Example: https://services.arcgis.com/org123/arcgis/rest/services/LeadServiceLines/FeatureServer/0
VITE_ARCGIS_FEATURE_SERVICE_URL=

# OAuth Client ID (required for private layers, optional for public)
# Get this from your ArcGIS Online OAuth application
VITE_ARCGIS_CLIENT_ID=

# ArcGIS Portal URL (optional, defaults to https://www.arcgis.com)
VITE_ARCGIS_PORTAL_URL=https://www.arcgis.com

# OAuth Redirect URI (required if using OAuth)
# For local dev: http://localhost:5173
# For production: https://yourdomain.com
VITE_ARCGIS_REDIRECT_URI=http://localhost:5173

# Geocoding Service URL (optional, uses ArcGIS World Geocoder by default)
VITE_ARCGIS_GEOCODE_SERVICE_URL=https://geocode.arcgis.com/arcgis/rest/services/World/GeocodeServer

# Feature Layer Settings (optional)
VITE_ARCGIS_LAYER_ID=0
VITE_ARCGIS_MAX_FEATURES=10000
